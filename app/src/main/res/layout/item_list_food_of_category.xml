<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="@dimen/define_dimen_10"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/define_dimen_20"
        android:layout_height="wrap_content">

        <com.dangtin.cookbook.ui.widget.textview.RobotoBoldTextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_toLeftOf="@+id/tvSeeAll"
            android:layout_marginRight="@dimen/define_dimen_10"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:textSize="@dimen/text_size_normal"/>

        <com.dangtin.cookbook.ui.widget.textview.RobotoRegularTextView
            android:id="@+id/tvSeeAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="@string/see_all_underline"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_size_small"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcvData"
        android:layout_marginTop="@dimen/define_dimen_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
