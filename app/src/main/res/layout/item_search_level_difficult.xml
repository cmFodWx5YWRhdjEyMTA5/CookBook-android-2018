<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/define_dimen_16"
    android:background="@drawable/bg_orange_shape_round_corner">

    <TextView
        android:id="@+id/tvLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/define_dimen_6"
        android:paddingLeft="@dimen/define_dimen_16"
        android:paddingRight="@dimen/define_dimen_5"
        android:paddingTop="@dimen/define_dimen_6"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_xsmall"></TextView>

    <LinearLayout
        android:id="@+id/layout_star"
        android:layout_toRightOf="@+id/tvLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/define_dimen_16"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_level_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star_rate_white" />

        <ImageView
            android:id="@+id/image_level_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star_rate_white" />

        <ImageView
            android:id="@+id/image_level_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star_rate_white" />
    </LinearLayout>

</RelativeLayout>
