<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item_history"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/define_dimen_10"
    android:paddingTop="@dimen/define_dimen_10">

    <ImageView
        android:id="@+id/image_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_history_black" />

    <com.dangtin.cookbook.ui.widget.textview.RobotoRegularTextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/define_dimen_12"
        android:layout_marginRight="@dimen/define_dimen_10"
        android:layout_toLeftOf="@+id/layout_clear"
        android:layout_toRightOf="@+id/image_history"
        android:text="@string/app_name"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/text_size_small" />

    <RelativeLayout
        android:id="@+id/layout_clear"
        android:layout_width="@dimen/define_dimen_30"
        android:layout_height="@dimen/define_dimen_30"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/image_clear"
            android:layout_width="@dimen/define_dimen_20"
            android:layout_height="@dimen/define_dimen_20"
            android:layout_centerInParent="true"
            android:padding="@dimen/define_dimen_2"
            android:src="@drawable/ic_clear_black" />
    </RelativeLayout>
</RelativeLayout>

