<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/define_dimen_56">

        <ImageView
            android:id="@+id/image_back"
            android:layout_width="@dimen/define_dimen_56"
            android:layout_height="@dimen/define_dimen_56"
            android:padding="@dimen/define_dimen_16"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_back_black" />

        <com.dangtin.cookbook.ui.widget.textview.RobotoRegularTextView
            android:id="@+id/tvKeyword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/define_dimen_10"
            android:layout_toRightOf="@+id/image_back"
            android:padding="@dimen/define_dimen_10"
            android:textColor="@color/textColorPrimary"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:textSize="@dimen/text_size_normal" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dividerColor" />

    <com.dangtin.cookbook.ui.widget.views.CustomTabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_header"
        android:background="@color/white"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabIndicatorHeight="1dp"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabTextAppearance="@style/MyTabLayoutTextAppearance"
        app:tabTextColor="@color/textColorSecondary" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pagger"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />

</LinearLayout>